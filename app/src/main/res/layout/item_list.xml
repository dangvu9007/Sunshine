<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_ic_weather"
        android:src="@drawable/ic_cloudy"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvDayOfWeek"

        />
    <TextView
        android:id="@+id/tvDayOfWeek"
        android:textSize="30sp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_ic_weather"
        />
    <TextView
        android:id="@+id/tvState_Lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDayOfWeek"
        app:layout_constraintStart_toEndOf="@+id/img_ic_weather"
        />
    <TextView
        android:id="@+id/tvTempHight_Lv"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        />
    <TextView
        android:id="@+id/tvTempLow_Lv"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTempHight_Lv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="26dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>